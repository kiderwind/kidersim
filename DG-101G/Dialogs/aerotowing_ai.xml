<PropertyList>
  <name>aerotowing_ai_dialog</name>
  <layout>vbox</layout>
  <default-padding>5</default-padding>
  <modal>false</modal>
  <width>500</width>

<!-- the title bar -->
  <group>
    <layout>hbox</layout>
    <empty><stretch>true</stretch></empty>
    <text>
      <label>Aerotowing Configuration (MP, AI)</label>
    </text>
    <empty><stretch>true</stretch></empty>
  </group>

  <hrule/>
  <hrule/>

  <!-- the list (table) with the candidates -->
  <group>
    <layout>vbox</layout>
    <group>
      <layout>hbox</layout>
      <text><label>5 closest candidates, selecting one connects automatically to it</label></text>
      <empty><stretch>true</stretch></empty>
    </group>
<!-- the real data as table -->
<!-- the first candidate -->
    <group>
      <layout>hbox</layout>
      <checkbox>
        <halign>left</halign>
        <live>true</live>
        <property>/sim/glider/towing/list/candidate[0]/selected</property>
        <enable>
          <not>
            <greater-than>
              <property>sim/glider/towing/list/candidate[0]/distance_m</property>
              <value>3000</value>
            </greater-than>
          </not>
        </enable>
        <binding>
          <command>nasal</command>
          <script>dg101g.selectCandidates(0)</script>
        </binding>
