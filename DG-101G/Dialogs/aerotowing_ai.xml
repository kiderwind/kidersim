  <hrule/>
  <hrule/>
  
  <!-- aerotowing parameters -->
  <group>
    <layout>vbox</layout>
    <group>
      <layout>hbox</layout>
      <text>
        <label>Aerotowing parameter settings</label>
      </text>
    </group>
    <!-- tow length -->
    <group>
      <layout>hbox</layout>
      <text>
        <halign>left</halign>
        <label>Aerotowing Tow Length</label>
      </text>
      <group>
        <layout>hbox</layout>
        <halign>right</halign>
        <text>
          <label> 9999</label>
          <live>true</live>
          <format>%0.0f m </format>
          <property>/sim/glider/towing/conf/rope_length_m</property>
        </text>
        <empty>
          <stretch>true</stretch>
        </empty>
        <vrule/>
        <text>
          <label>50m</label>
        </text>
        <slider>
          <name>aerotow_length</name>
          <property>/sim/glider/towing/conf/rope_length_m</property>
          <min>50</min>
          <max>100</max>
          <step>1</step>  
          <binding>
            <command>dialog-apply</command>
          </binding>
        </slider>
        <text>
          <label>100m</label>
        </text>
      </group>
    </group>
  </group>

