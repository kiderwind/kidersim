      <text>
        <label>M</label>
        <format>id: %03d  </format>
        <halign>left</halign>
        <live>true</live>
        <property>/sim/glider/towing/list/candidate[0]/id</property>
        <color>
          <red>0.1</red>
          <green>0.1</green>
          <blue>0.1</blue>
        </color>
      </text>
      <empty><pref-width>30</pref-width></empty>
      <text>
        <label>M</label>
        <format>type: %s  </format>
        <halign>left</halign>
        <live>true</live>
