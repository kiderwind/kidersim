  <group>
    <layout>hbox</layout>
    <empty>
      <pref-height>6</pref-height>
    </empty>
    <button>
      <legend>advanced configuration aerotowing</legend>
      <binding>
        <command>nasal</command>
        <script>dg101g.aerotowing_advanced_dialog.open()</script>
      </binding>
    </button>
    <empty>
      <pref-height>6</pref-height>
    </empty>
  </group>


  <hrule/>
  <hrule/>


<!-- bottom line -->
  <group>
    <layout>hbox</layout>
    <button>
      <legend>Reset Properties</legend>
      <binding>
        <command>nasal</command>
        <script>dg101g.resetTowing()</script>
      </binding>
    </button>
    <empty><stretch>true</stretch></empty>
    <button>
      <legend>Clear Redout</legend>
      <binding>
        <command>property-assign</command>
        <property>/sim/rendering/redout/enabled</property>
        <value type="bool">false</value>
      </binding>
    </button>
    <empty><stretch>true</stretch></empty>
    <button>
      <legend>Close</legend>
      <binding>
        <command>nasal</command>
        <script>dg101g.hookDragger()</script>
      </binding>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>
    <empty><stretch>true</stretch></empty>
    <button>
      <legend>Cancel</legend>
      <binding>
        <command>nasal</command>
        <script>dg101g.restorePosition()</script>
      </binding>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>
  </group>

  <!-- possible draggers listing -->
    <nasal>
      <open>
        dg101g.releaseDragger();
        dg101g.listCandidates();
      </open>
      <close>
        dg101g.removeCandidates();
      </close>
    </nasal>

