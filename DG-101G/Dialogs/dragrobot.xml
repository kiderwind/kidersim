<?xml version="1.0"?>
<!-- version: 2012-06-05 -->

<PropertyList>
  <name>dragrobot_dialog</name>
  <layout>vbox</layout>
  <default-padding>1</default-padding>
  <modal>false</modal>
  <width>500</width>

<!-- headline -->
  <group>
    <layout>hbox</layout>
    <default-padding>1</default-padding>
    <empty>
      <stretch>true</stretch>
    </empty>
    <text>
      <label>Drag Roboter Configuration</label>
      <font>
        <name>times_bold</name>
      </font>
    </text>
    <empty>
      <stretch>true</stretch>
    </empty>
  </group>


    <hrule/>
    <hrule/>



<!-- max. lift height -->
  <group>
    <layout>hbox</layout>
    <text>
      <halign>left</halign>
      <label>max. lift height</label>
    </text>
    <group>
      <layout>hbox</layout>
      <halign>right</halign>
      <text>
        <label>999999</label>
        <live>true</live>
        <format>%0.0f m </format>
        <property>sim/glider/dragger/conf/glob_max_lift_height_m</property>
        <color>
          <red>0.2</red>
          <green>0.9</green>
          <blue>0.2</blue>
        </color>
      </text>
      <empty>
        <stretch>true</stretch>
      </empty>
      <vrule/>
      <group>
        <width>60</width>
        <text>
          <label>100m</label>
        </text>
      </group>
      <slider>
        <name>max_lift_height_m</name>
        <property>sim/glider/dragger/conf/glob_max_lift_height_m</property>
        <min>100.0</min>
        <max>5000.0</max>
        <live>true</live>
        <binding>
          <command>dialog-apply</command>
        </binding>
      </slider>
      <group>
        <width>60</width>
        <text>
          <label>5000m</label>
        </text>
      </group>
    </group>
  </group>

<!-- tow length -->
  <group>
    <layout>hbox</layout>
    <text>
      <halign>left</halign>
      <label>Aerotowing Tow Length</label>
    </text>
    <group>
      <layout>hbox</layout>
      <halign>right</halign>
      <text>
        <label>999999</label>
        <live>true</live>
        <format>%0.0f m </format>
        <property>/sim/glider/towing/conf/rope_length_m</property>
        <color>
          <red>0.2</red>
          <green>0.9</green>
          <blue>0.2</blue>
        </color>
      </text>
      <empty>
        <stretch>true</stretch>
      </empty>
      <vrule/>
      <group>
        <width>60</width>
        <text>
          <label>50m</label>
        </text>
      </group>
      <slider>
        <name>aerotow_length</name>
        <property>/sim/glider/towing/conf/rope_length_m</property>
        <min>50</min>
        <max>100</max>
        <step>1</step>  
        <binding>
          <command>dialog-apply</command>
        </binding>
      </slider>
      <group>
        <width>60</width>
        <text>
          <label>100m</label>
        </text>
      </group>
    </group>
  </group>


  <hrule/>

<!-- advanced configuration -->
  <group>
    <layout>hbox</layout>
    <empty>
      <pref-height>6</pref-height>
    </empty>
    <button>
      <legend>advanced configuration drag roboter</legend>
      <binding>
        <command>nasal</command>
        <script>dg101g.dragrobot_advanced_dialog.open()</script>
      </binding>
    </button>
    <empty>
      <pref-height>6</pref-height>
    </empty>
  </group>

  <group>
    <layout>hbox</layout>
    <empty>
      <pref-height>6</pref-height>
    </empty>
    <button>
      <legend>advanced configuration aerotowing</legend>
      <binding>
        <command>nasal</command>
        <script>dg101g.aerotowing_advanced_dialog.open()</script>
      </binding>
    </button>
    <empty>
      <pref-height>6</pref-height>
    </empty>
  </group>


    <hrule/>
    <hrule/>


<!-- bottom line -->
  <group>
    <layout>hbox</layout>
    <button>
      <legend>Reset</legend>
      <binding>
        <command>nasal</command>
        <script>dg101g.resetRobotAttributes()</script>
      </binding>
      <binding>
        <command>nasal</command>
        <script>dg101g.resetTowing()</script>
      </binding>
    </button>
    <empty>
      <pref-height>6</pref-height>
    </empty>
    <button>
      <legend>Create</legend>
      <binding>
        <command>nasal</command>
        <script>dg101g.setupDragRobot()</script>
      </binding>
    </button>
    <empty>
      <pref-height>6</pref-height>
    </empty>
    <button>
      <legend>Remove</legend>
      <binding>
        <command>nasal</command>
        <script>dg101g.removeDragRobot()</script>
      </binding>
    </button>
    <empty>
      <pref-height>6</pref-height>
    </empty>
    <button>
      <legend>Run</legend>
      <binding>
        <command>nasal</command>
        <script>dg101g.guiRunDragRobot()</script>
      </binding>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>
    <empty>
      <pref-height>6</pref-height>
    </empty>
    <button>
      <legend>Cancel</legend>
      <binding>
        <command>nasal</command>
        <script>dg101g.guiCancelDragRobot()</script>
      </binding>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>
  </group>



<!-- nasal code -->
  <nasal>
    <open>
    </open>
    <close>
    </close>
  </nasal>

</PropertyList>
