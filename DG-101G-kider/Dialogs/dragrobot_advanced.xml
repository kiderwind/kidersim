  </group>

<!-- max. tauten acceleration -->
  <group>
    <layout>hbox</layout>
    <text>
      <halign>left</halign>
      <label>max. acceleration for tautening</label>
    </text>
    <group>
      <layout>hbox</layout>
      <halign>right</halign>
      <text>
        <label>999999</label>
        <live>true</live>
        <format>%0.1f m/ss </format>
        <property>sim/glider/dragger/conf/glob_min_acceleration_mpss</property>
        <color>
          <red>0.2</red>
          <green>0.9</green>
          <blue>0.2</blue>
        </color>
      </text>
      <empty>
        <stretch>true</stretch>
      </empty>
      <vrule/>
      <group>
        <width>60</width>
