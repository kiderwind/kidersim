          <label>100m</label>
        </text>
      </group>
    </group>
  </group>


    <hrule/>
    <hrule/>


<!-- bottom line -->
  <group>
    <layout>hbox</layout>
    <button>
      <legend>Reset</legend>
      <binding>
        <command>nasal</command>
        <script>dg101g.resetRobotAttributes()</script>
      </binding>
    </button>
    <empty>
      <pref-height>6</pref-height>
    </empty>
    <button>
      <legend>Close</legend>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>
  </group>



<!-- nasal code -->
  <nasal>
    <open>
    </open>
    <close>
    </close>
  </nasal>

</PropertyList>
