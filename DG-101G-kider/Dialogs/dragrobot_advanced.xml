          <red>0.2</red>
          <green>0.9</green>
          <blue>0.2</blue>
        </color>
      </text>
      <empty>
        <stretch>true</stretch>
      </empty>
      <vrule/>
      <group>
        <width>60</width>
        <text>
          <label>1m/ss</label>
        </text>
      </group>
      <slider>
        <name>max_acceleration_mpss</name>
        <property>sim/glider/dragger/conf/glob_max_acceleration_mpss</property>
        <min>1.0</min>
        <max>5.0</max>
        <live>true</live>
        <binding>
          <command>dialog-apply</command>
        </binding>
      </slider>
      <group>
        <width>60</width>
        <text>
          <label>5m/ss</label>
        </text>
      </group>
    </group>
  </group>

  <hrule/>

<!-- max. tauten speed -->
  <group>
    <layout>hbox</layout>
    <text>
      <halign>left</halign>
      <label>max. speed for tautening</label>
    </text>
    <group>
      <layout>hbox</layout>
      <halign>right</halign>
      <text>
        <label>999999</label>
        <live>true</live>
        <format>%0.1f km/h </format>
        <property>sim/glider/gui/dragrobot/max_speed_tauten</property>
        <color>
          <red>0.2</red>
          <green>0.9</green>
          <blue>0.2</blue>
        </color>
      </text>
      <empty>
