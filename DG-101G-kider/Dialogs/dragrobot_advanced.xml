        </text>
      </group>
      <slider>
        <name>min_acceleration_mpss</name>
        <property>sim/glider/dragger/conf/glob_min_acceleration_mpss</property>
        <min>0.2</min>
        <max>1.0</max>
        <live>true</live>
        <binding>
          <command>dialog-apply</command>
        </binding>
      </slider>
      <group>
        <width>60</width>
        <text>
          <label>1m/ss</label>
        </text>
      </group>
    </group>
  </group>

<!-- tauten distance -->
  <group>
    <layout>hbox</layout>
    <text>
      <halign>left</halign>
      <label>tauten distance</label>
    </text>
    <group>
      <layout>hbox</layout>
      <halign>right</halign>
      <text>
        <label>999999</label>
        <live>true</live>
        <format>%0.0f m </format>
        <property>sim/glider/dragger/conf/glob_max_tautendist_m</property>
        <color>
          <red>0.2</red>
          <green>0.9</green>
          <blue>0.2</blue>
        </color>
      </text>
      <empty>
        <stretch>true</stretch>
      </empty>
      <vrule/>
